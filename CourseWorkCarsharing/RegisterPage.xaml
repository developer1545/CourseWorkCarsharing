<Page x:Class="CourseWorkCarsharing.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWorkCarsharing"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Background="#E6E6FA">
        <ScrollViewer Margin="0,20,0,20">
            <StackPanel Margin="20" Background="White"  MaxWidth="500" HorizontalAlignment="Center" VerticalAlignment="Top" >

                <TextBlock Text="Регистрация" FontSize="36" FontFamily="Trebuchet MS" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Логин -->
                <TextBlock Text="Логин" FontSize="18" Margin="0,10,0,2"/>
                <TextBox x:Name="LoginBox" FontSize="18" BorderBrush="Black" />

                <!-- Пароль -->
                <TextBlock Text="Пароль" FontSize="18" Margin="0,10,0,2"/>
                <PasswordBox x:Name="PasswordBox" FontSize="18" BorderBrush="Black" />
                <TextBox x:Name="textBox" Visibility="Collapsed" FontSize="18" BorderBrush="Black"/>
                <CheckBox x:Name="showPasswordCheckBox" Content="Показать пароль 🔒" Margin="0,5,0,0" 
                          Checked="ShowPasswordCheckBox_Checked" Unchecked="ShowPasswordCheckBox_Unchecked"/>

                <!-- Номер телефона -->
                <TextBlock Text="Номер телефона" FontSize="18" Margin="0,10,0,2"/>
                <TextBox x:Name="NumberPhoneBox" FontSize="18" BorderBrush="Black" />

                <!-- Email -->
                <TextBlock Text="Адрес электронной почты" FontSize="18" Margin="0,10,0,2"/>
                <TextBox x:Name="MailAdressBox" FontSize="18" BorderBrush="Black" />

                <!-- Имя -->
                <TextBlock Text="Имя" FontSize="18" Margin="0,10,0,2"/>
                <TextBox x:Name="NameBox" FontSize="18" BorderBrush="Black" />

                <!-- Фамилия -->
                <TextBlock Text="Фамилия" FontSize="18" Margin="0,10,0,2"/>
                <TextBox x:Name="FamilyBox" FontSize="18" BorderBrush="Black" />

                <!-- Дата рождения -->
                <TextBlock Text="Дата рождения" FontSize="18" Margin="0,10,0,2"/>
                <DatePicker x:Name="DatePickerBurd" FontSize="18" BorderBrush="Black" />

                <!-- Кнопка регистрации -->
                <Button Content="Зарегистрироваться" FontSize="22" Background="#FF30BCFF" Foreground="Black" 
                        Margin="0,20,0,0" Padding="10" Click="ButtonRegisterClick"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

