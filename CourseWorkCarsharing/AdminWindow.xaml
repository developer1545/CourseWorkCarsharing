<Window x:Class="CourseWorkCarsharing.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Панель администратора" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Заказы">
                <DataGrid x:Name="OrdersGrid" AutoGenerateColumns="False" 
                         CanUserAddRows="False" CanUserDeleteRows="True"
                         CellEditEnding="OrdersGrid_CellEditEnding"
                         PreviewKeyDown="DataGrid_PreviewKeyDown">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding OrderID}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Name}"/>
                        <DataGridTextColumn Header="Автомобиль" Binding="{Binding Auto.Mark}"/>
                        <DataGridTextColumn Header="Тариф" Binding="{Binding pricingPlan.Pricing_name}"/>
                        <DataGridTextColumn Header="Парковка" Binding="{Binding Parking.Название}"/>
                        <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Пользователи">
                <StackPanel>
                    <Button Content="Добавить пользователя" Click="AddUser_Click" Margin="5"/>
                    <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="True"
                             CellEditEnding="UsersGrid_CellEditEnding"
                             PreviewKeyDown="DataGrid_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding UserID}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Login}"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Role}"/>
                            <DataGridTextColumn Header="Дата регистрации" Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Автомобили">
                <StackPanel>
                    <Button Content="Добавить автомобиль" Click="AddCar_Click" Margin="5"/>
                    <DataGrid x:Name="CarsGrid" AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="True"
                             CellEditEnding="CarsGrid_CellEditEnding"
                             PreviewKeyDown="DataGrid_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Марка" Binding="{Binding Mark}"/>
                            <DataGridTextColumn Header="Модель" Binding="{Binding Model}"/>
                            <DataGridTextColumn Header="Год" Binding="{Binding Year_of_release}"/>
                            <DataGridTextColumn Header="Цвет" Binding="{Binding Colour}"/>
                            <DataGridTextColumn Header="Тип топлива" Binding="{Binding Fuel_type}"/>
                            <DataGridTextColumn Header="Коробка" Binding="{Binding Transmission_box}"/>
                            <DataGridTextColumn Header="Пробег" Binding="{Binding Mileage}"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Тарифы">
                <StackPanel>
                    <Button Content="Добавить тариф" Click="AddPricing_Click" Margin="5"/>
                    <DataGrid x:Name="PricingGrid" AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="True"
                             CellEditEnding="PricingGrid_CellEditEnding"
                             PreviewKeyDown="DataGrid_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Pricing_name}"/>
                            <DataGridTextColumn Header="Срок" Binding="{Binding Term}"/>
                            <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Парковки">
                <StackPanel>
                    <Button Content="Добавить парковку" Click="AddParking_Click" Margin="5"/>
                    <DataGrid x:Name="ParkingGrid" AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="True"
                             CellEditEnding="ParkingGrid_CellEditEnding"
                             PreviewKeyDown="DataGrid_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID_Парковки}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Название}"/>
                            <DataGridTextColumn Header="Расположение" Binding="{Binding Расположение}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>