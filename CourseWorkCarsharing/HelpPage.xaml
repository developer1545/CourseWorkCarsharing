<Page x:Class="CourseWorkCarsharing.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWorkCarsharing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelpPage">

    <Grid Background="#E6E6FA" >
        <ScrollViewer Margin="0,0,0,0" >
            <StackPanel Margin="0,20,0,20" Background="White">
                <Grid Margin="0,20,0,20"  >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="500*"/>
                        <ColumnDefinition Width="100*"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>



                    <TextBlock  Grid.Column="1" Text="Помощь" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Trebuchet MS"></TextBlock>

                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <TextBlock Text="С нами можно связаться" FontSize="30" FontFamily="Bahnschrift SemiLight" Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3" Foreground="Black"/>

                        <Button Content=" 📞 +79245581695 " Click="NumberTelephonClick" Background="#FF28FF00"  FontSize="20" Foreground="White" BorderBrush="Black" Grid.Column="0" Grid.Row="1" Margin="10,0,10,0">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}" 
CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content=" 📧 carsharingbusiness@mail.ru " Click="ButtonMailClick" Background="#FF0047FF"  FontSize="20" Foreground="White" BorderBrush="Black" Grid.Column="1" Grid.Row="1" Margin="10,0,10,0" >
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}" 
CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content=" ✉️ Telegram " Click="ButtonTelegrammClick" Background="#FF0BA6E5"  FontSize="20" BorderBrush="Black" Foreground="White" Grid.Column="2" Grid.Row="1" Margin="10,0,10,0" >
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}" 
CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>



                    </Grid>

                    <Grid Grid.Column="1" Grid.Row="2" Background="#FFDFDFDF" Margin="0,10,0,10" >
                        <Grid Margin="0,20,0,20" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Спросите в чате наших менеджеров" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontFamily="Times New Roman" TextWrapping="Wrap" Margin="20,0,20,0"/>
                            
                            <Image Source=" /Rulles/5943491 (1).png" Grid.Column="1" Width="100" Margin="20,0,20,0" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="3" >
                        <StackPanel >
                        <TextBlock Text="Часто задаваемые вопросы" FontFamily="Bahnschrift SemiLight" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                        <Expander Header="Регистрация в приложении и авторизация" FontSize="20">
                                <StackPanel >
                                    <Expander Header="Как стать пользователем" FontSize="18" >
                                        
                                    </Expander>
                                    <Expander Header="Требования к водителям" FontSize="18" > </Expander>
                                    <Expander Header="Необходимые документы" FontSize="18" ></Expander>
                                    <Expander Header="Где скачать приложение" FontSize="18" ></Expander>
                                    <Expander Header="У меня нет оригиналов документов" FontSize="18" ></Expander>
                                    <Expander Header="Не могу привязать банковскую карту" FontSize="18" ></Expander>
                                    <Expander Header="Как изменить свои данные в приложении" FontSize="18" ></Expander>
                                    <Expander Header="Мой аккаунт заблокирован" FontSize="18" ></Expander>
                                    <Expander Header="Хочу удалить учетную запись" FontSize="18" ></Expander>
                                </StackPanel>
                           
                            
                        </Expander>
                        </StackPanel>

                    </Grid>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
